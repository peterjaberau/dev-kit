{
  "$ref": "#/definitions/CostBreakdownEntry",
  "definitions": {
    "CostBreakdownEntry": {
      "type": "object",
      "properties": {
        "dimension": {
          "type": "string",
          "enum": [
            "model",
            "provider",
            "user",
            "agent",
            "object",
            "operation",
            "date",
            "hour",
            "tag"
          ]
        },
        "value": {
          "type": "string",
          "description": "Dimension value (e.g., model ID, user ID)"
        },
        "totalCost": {
          "type": "number",
          "minimum": 0
        },
        "requestCount": {
          "type": "integer",
          "minimum": 0
        },
        "totalTokens": {
          "type": "integer",
          "minimum": 0
        },
        "percentageOfTotal": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "periodStart": {
          "type": "string",
          "format": "date-time"
        },
        "periodEnd": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "dimension",
        "value",
        "totalCost",
        "requestCount",
        "percentageOfTotal"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}