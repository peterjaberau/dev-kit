            "value_too_long",
            "value_too_short",
            "value_out_of_range",
            "invalid_reference",
            "duplicate_value",
            "invalid_query",
            "invalid_filter",
            "invalid_sort",
            "max_records_exceeded",
            "unauthenticated",
            "invalid_credentials",
            "expired_token",
            "invalid_token",
            "session_expired",
            "mfa_required",
            "email_not_verified",
            "permission_denied",
            "insufficient_privileges",
            "field_not_accessible",
            "record_not_accessible",
            "license_required",
            "ip_restricted",
            "time_restricted",
