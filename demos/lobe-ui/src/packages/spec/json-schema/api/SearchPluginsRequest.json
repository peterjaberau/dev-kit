{
  "$ref": "#/definitions/SearchPluginsRequest",
  "definitions": {
    "SearchPluginsRequest": {
      "type": "object",
      "properties": {
        "query": {
          "type": "string"
        },
        "category": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "trustLevel": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "official",
              "verified",
              "community",
              "unverified"
            ]
          }
        },
        "implementsProtocols": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "pricingModel": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "free",
              "freemium",
              "paid",
              "enterprise"
            ]
          }
        },
        "minRating": {
          "type": "number",
          "minimum": 0,
          "maximum": 5
        },
        "sortBy": {
          "type": "string",
          "enum": [
            "relevance",
            "downloads",
            "rating",
            "updated",
            "name"
          ]
        },
        "sortOrder": {
          "type": "string",
          "enum": [
            "asc",
            "desc"
          ],
          "default": "desc"
        },
        "page": {
          "type": "integer",
          "minimum": 1,
          "default": 1
        },
        "limit": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "default": 20
        }
      },
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}