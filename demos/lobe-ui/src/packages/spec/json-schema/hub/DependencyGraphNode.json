{
  "$ref": "#/definitions/DependencyGraphNode",
  "definitions": {
    "DependencyGraphNode": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "versionConstraint": {
                "type": "string",
                "description": "Semver range (e.g., `^1.0.0`, `>=2.0.0 <3.0.0`)"
              },
              "type": {
                "type": "string",
                "enum": [
                  "required",
                  "optional",
                  "peer",
                  "dev"
                ],
                "default": "required"
              },
              "resolvedVersion": {
                "type": "string"
              }
            },
            "required": [
              "name",
              "versionConstraint"
            ],
            "additionalProperties": false
          },
          "default": []
        },
        "depth": {
          "type": "integer",
          "minimum": 0
        },
        "isDirect": {
          "type": "boolean"
        },
        "metadata": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "license": {
              "type": "string"
            },
            "homepage": {
              "type": "string",
              "format": "uri"
            }
          },
          "required": [
            "name"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "id",
        "version",
        "depth",
        "isDirect"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}