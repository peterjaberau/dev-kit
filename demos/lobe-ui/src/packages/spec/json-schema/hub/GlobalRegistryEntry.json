{
  "$ref": "#/definitions/GlobalRegistryEntry",
  "definitions": {
    "GlobalRegistryEntry": {
      "type": "object",
      "properties": {
        "resourceId": {
          "type": "string"
        },
        "resourceType": {
          "type": "string",
          "enum": [
            "plugin",
            "tenant",
            "space",
            "license"
          ]
        },
        "locations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "regionId": {
                "type": "string"
              },
              "hubId": {
                "type": "string",
                "format": "uuid"
              },
              "isPrimary": {
                "type": "boolean",
                "default": false
              },
              "lastSyncedAt": {
                "type": "string",
                "format": "date-time"
              },
              "version": {
                "type": "string"
              }
            },
            "required": [
              "regionId",
              "hubId"
            ],
            "additionalProperties": false
          }
        },
        "versionVector": {
          "type": "object",
          "additionalProperties": {
            "type": "integer"
          }
        }
      },
      "required": [
        "resourceId",
        "resourceType",
        "locations"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}