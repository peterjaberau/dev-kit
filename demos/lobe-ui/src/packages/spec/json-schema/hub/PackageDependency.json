{
  "$ref": "#/definitions/PackageDependency",
  "definitions": {
    "PackageDependency": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "versionConstraint": {
          "type": "string",
          "description": "Semver range (e.g., `^1.0.0`, `>=2.0.0 <3.0.0`)"
        },
        "type": {
          "type": "string",
          "enum": [
            "required",
            "optional",
            "peer",
            "dev"
          ],
          "default": "required"
        },
        "resolvedVersion": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "versionConstraint"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}