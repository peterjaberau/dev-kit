{
  "$ref": "#/definitions/PluginPricing",
  "definitions": {
    "PluginPricing": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "free",
            "one_time",
            "recurring"
          ]
        },
        "currency": {
          "type": "string",
          "default": "USD"
        },
        "amount": {
          "type": "number",
          "minimum": 0
        },
        "interval": {
          "type": "string",
          "enum": [
            "month",
            "year"
          ],
          "description": "Required if type is recurring"
        },
        "trialDays": {
          "type": "integer"
        }
      },
      "required": [
        "type",
        "amount"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}