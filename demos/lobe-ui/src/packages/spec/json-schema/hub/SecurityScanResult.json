{
  "$ref": "#/definitions/SecurityScanResult",
  "definitions": {
    "SecurityScanResult": {
      "type": "object",
      "properties": {
        "scanId": {
          "type": "string",
          "format": "uuid"
        },
        "plugin": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "version": {
              "type": "string"
            }
          },
          "required": [
            "id",
            "version"
          ],
          "additionalProperties": false
        },
        "scannedAt": {
          "type": "string",
          "format": "date-time"
        },
        "scanner": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "Scanner name (e.g., snyk, osv, trivy)"
            },
            "version": {
              "type": "string"
            }
          },
          "required": [
            "name",
            "version"
          ],
          "additionalProperties": false
        },
        "status": {
          "type": "string",
          "enum": [
            "passed",
            "failed",
            "warning"
          ]
        },
        "vulnerabilities": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "cve": {
                "type": "string",
                "pattern": "^CVE-\\d{4}-\\d+$",
                "description": "CVE identifier"
              },
              "id": {
                "type": "string",
                "description": "Vulnerability ID"
              },
              "title": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "severity": {
                "type": "string",
                "enum": [
                  "critical",
                  "high",
                  "medium",
                  "low",
                  "info"
                ]
              },
              "cvss": {
                "type": "number",
                "minimum": 0,
                "maximum": 10
              },
              "package": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "version": {
                    "type": "string"
                  },
                  "ecosystem": {
                    "type": "string"
                  }
                },
                "required": [
                  "name",
                  "version"
                ],
                "additionalProperties": false
              },
              "vulnerableVersions": {
                "type": "string",
                "description": "Semver range of vulnerable versions"
              },
              "patchedVersions": {
                "type": "string",
                "description": "Semver range of patched versions"
              },
              "references": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": [
                        "advisory",
                        "article",
                        "report",
                        "web"
                      ]
                    },
                    "url": {
                      "type": "string",
                      "format": "uri"
                    }
                  },
                  "required": [
                    "type",
                    "url"
                  ],
                  "additionalProperties": false
                },
                "default": []
              },
              "cwe": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "default": []
              },
              "publishedAt": {
                "type": "string",
                "format": "date-time"
              },
              "mitigation": {
                "type": "string"
              }
            },
            "required": [
              "id",
              "title",
              "description",
              "severity",
              "package",
              "vulnerableVersions"
            ],
            "additionalProperties": false
          }
        },
        "summary": {
          "type": "object",
          "properties": {
            "critical": {
              "type": "integer",
              "minimum": 0,
              "default": 0
            },
            "high": {
              "type": "integer",
              "minimum": 0,
              "default": 0
            },
            "medium": {
              "type": "integer",
              "minimum": 0,
              "default": 0
            },
            "low": {
              "type": "integer",
              "minimum": 0,
              "default": 0
            },
            "info": {
              "type": "integer",
              "minimum": 0,
              "default": 0
            },
            "total": {
              "type": "integer",
              "minimum": 0,
              "default": 0
            }
          },
          "additionalProperties": false
        },
        "licenseIssues": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "package": {
                "type": "string"
              },
              "license": {
                "type": "string"
              },
              "reason": {
                "type": "string"
              },
              "severity": {
                "type": "string",
                "enum": [
                  "error",
                  "warning",
                  "info"
                ]
              }
            },
            "required": [
              "package",
              "license",
              "reason",
              "severity"
            ],
            "additionalProperties": false
          },
          "default": []
        },
        "codeQuality": {
          "type": "object",
          "properties": {
            "score": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "issues": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": [
                      "security",
                      "quality",
                      "style"
                    ]
                  },
                  "severity": {
                    "type": "string",
                    "enum": [
                      "error",
                      "warning",
                      "info"
                    ]
                  },
                  "message": {
                    "type": "string"
                  },
                  "file": {
                    "type": "string"
                  },
                  "line": {
                    "type": "integer"
                  }
                },
                "required": [
                  "type",
                  "severity",
                  "message"
                ],
                "additionalProperties": false
              },
              "default": []
            }
          },
          "additionalProperties": false
        },
        "nextScanAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "scanId",
        "plugin",
        "scannedAt",
        "scanner",
        "status",
        "vulnerabilities",
        "summary"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}