{
  "$ref": "#/definitions/EventMetadata",
  "definitions": {
    "EventMetadata": {
      "type": "object",
      "properties": {
        "source": {
          "type": "string",
          "description": "Event source (e.g., plugin name, system component)"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 datetime when event was created"
        },
        "userId": {
          "type": "string",
          "description": "User who triggered the event"
        },
        "tenantId": {
          "type": "string",
          "description": "Tenant identifier for multi-tenant systems"
        },
        "correlationId": {
          "type": "string",
          "description": "Correlation ID for event tracing"
        },
        "causationId": {
          "type": "string",
          "description": "ID of the event that caused this event"
        },
        "priority": {
          "type": "string",
          "enum": [
            "critical",
            "high",
            "normal",
            "low",
            "background"
          ],
          "default": "normal",
          "description": "Event priority"
        }
      },
      "required": [
        "source",
        "timestamp"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}