{
  "$ref": "#/definitions/MetadataSaveOptions",
  "definitions": {
    "MetadataSaveOptions": {
      "type": "object",
      "properties": {
        "format": {
          "type": "string",
          "enum": [
            "json",
            "yaml",
            "typescript",
            "javascript"
          ],
          "default": "typescript",
          "description": "Output format"
        },
        "prettify": {
          "type": "boolean",
          "default": true,
          "description": "Format with indentation"
        },
        "indent": {
          "type": "integer",
          "minimum": 0,
          "maximum": 8,
          "default": 2,
          "description": "Indentation spaces"
        },
        "sortKeys": {
          "type": "boolean",
          "default": false,
          "description": "Sort object keys"
        },
        "includeDefaults": {
          "type": "boolean",
          "default": false,
          "description": "Include default values"
        },
        "backup": {
          "type": "boolean",
          "default": false,
          "description": "Create backup file"
        },
        "overwrite": {
          "type": "boolean",
          "default": true,
          "description": "Overwrite existing file"
        },
        "atomic": {
          "type": "boolean",
          "default": true,
          "description": "Use atomic write operation"
        },
        "path": {
          "type": "string",
          "description": "Custom output path"
        }
      },
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}