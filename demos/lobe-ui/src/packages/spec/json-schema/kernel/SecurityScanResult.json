                }
              },
              "fixedIn": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "cvssScore": {
                "type": "number",
                "minimum": 0,
                "maximum": 10
              },
              "exploitAvailable": {
                "type": "boolean",
                "default": false
              },
              "patchAvailable": {
                "type": "boolean",
                "default": false
              },
              "workaround": {
                "type": "string"
              },
              "references": {
