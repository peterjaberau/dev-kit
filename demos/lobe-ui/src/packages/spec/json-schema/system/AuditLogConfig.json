{
  "$ref": "#/definitions/AuditLogConfig",
  "definitions": {
    "AuditLogConfig": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "retentionDays": {
          "type": "number",
          "default": 365
        },
        "immutable": {
          "type": "boolean",
          "default": true
        },
        "signLogs": {
          "type": "boolean",
          "default": false
        },
        "events": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "create",
              "read",
              "update",
              "delete",
              "export",
              "permission-change",
              "login",
              "logout",
              "failed-login"
            ]
          }
        }
      },
      "required": [
        "events"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}