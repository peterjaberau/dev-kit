        "id": {
          "type": "string",
          "description": "Provider ID (github, google)"
        },
        "clientId": {
          "type": "string",
          "description": "OAuth Client ID"
        },
        "clientSecret": {
          "type": "string",
          "description": "OAuth Client Secret"
        },
        "scope": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Requested permissions"
        }
      },
      "required": [
        "id",
        "clientId",
        "clientSecret"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}