{
  "$ref": "#/definitions/TopicConfig",
  "definitions": {
    "TopicConfig": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "partitions": {
          "type": "number",
          "default": 1
        },
        "replicationFactor": {
          "type": "number",
          "default": 1
        },
        "retentionMs": {
          "type": "number"
        },
        "compressionType": {
          "type": "string",
          "enum": [
            "none",
            "gzip",
            "snappy",
            "lz4"
          ],
          "default": "none"
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}