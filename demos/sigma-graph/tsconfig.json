{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./public/*"],

      "#react-sigma/*": ["./src/app/react-sigma/packages/*"],
      "#react-sigma": ["./src/app/react-sigma/packages"],

      "#app/*": ["./src/app/*"],
      "#app": ["./src/app"],

      "#actors/*": ["./src/actors/*"],
      "#actors": ["./src/actors/"],

      "#hooks/*": ["./src/hooks/*"],
      "#hooks": ["./src/hooks"],

      "#components/*": ["./src/components/*"],
      "#components": ["./src/components"],


    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
